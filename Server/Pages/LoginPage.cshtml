@page
@model Gejms.Server.Pages.LoginPageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="card">
    <h4 class="card-header">Login</h4>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <span asp-validation-for="UserInput.Username"></span>
            <div class="form-group">
                <label>Username</label>
                <InputText asp-for="UserInput.Username" class="form-control" />
            </div>
            <span asp-validation-for="UserInput.Password"></span>
            <div class="form-group">
                <label>Password</label>
                <InputText asp-for="UserInput.Password" type="password" class="form-control" />
            </div>
            <button disabled="@Model.Loading" class="btn btn-primary">
                @if (@Model.Loading) 
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Login
            </button>
            <button disabled="@Model.Loading" class="btn btn-primary">
                @if (@Model.Loading) 
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Register
            </button>
            <NavLink href="account/register" class="btn btn-link">Register</NavLink>
        </form>
    </div>
</div>